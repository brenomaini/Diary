<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("partials/headInfos")%>

    <link rel="stylesheet" type="text/css" href="css/posts.css" />
    <title>Diary - My Posts</title>
  </head>
  <body class="container">
    <%- include("partials/headerLogedin")%>

    <div class="posts">
      <% posts.forEach((post)=>{ %>

      <br />
      <div class="post" id="<%=post.id %>">
        <span class="info">Title</span><br />
        <textarea disabled name="title" cols="15" rows="1">
<%=post.title%></textarea
        ><br />
        <span class="info">Date</span><br /><%=post.date%><br />
        <span class="info">Mood</span><br /><%=post.mood%><br />
        <textarea name="" id="" cols="20" rows="1" disabled>
<%=post.body%></textarea
        >
        <br />
        <div class="buttons">
          <a href="edit?id=<%=post.id %>"
            ><img
              class="editButton"
              src="images/pencil.svg"
              alt="PencilIcon"
              srcset=""
          /></a>
          <button></button>
        </div>
      </div>
      <br />

      <% }) %>
    </div>
    <div id="PaginationButtons">
      <a href="<%=previousURL %>" id="Previous">&laquo</a><a id="Next" href="<%=nextURL %>">&raquo</a>
      
    </div>
    <%- include('partials/footer') %>

    <script src="scripts/script.js"></script>
  </body>
</html>
